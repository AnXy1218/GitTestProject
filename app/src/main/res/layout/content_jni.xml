<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gittestproject.JNIActivity"
    tools:showIn="@layout/activity_jni">

    <TextView
        android:id="@+id/tv_helloworld_jni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"/>
    
    <LinearLayout
        android:id="@+id/ll_num_jni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_helloworld_jni"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_num1_jni"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="+"/>
        <EditText
            android:id="@+id/ed_num2_jni"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="="/>
        <TextView
            android:id="@+id/tv_result_jni"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_add_jni"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00ff00"
        android:layout_below="@id/ll_num_jni"
        android:text="计算"
        android:textSize="18sp"
        android:gravity="center"/>
</RelativeLayout>
